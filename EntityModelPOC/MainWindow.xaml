<Window x:Class="EntityModelPOC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Model="clr-namespace:EntityModelPOC.Model"
        xmlns:UI="clr-namespace:EntityModelPOC.UI" Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Model:EntityModelModel x:Key="Model" />
      <UI:EntityResourceDisplayNameConverter x:Key="EntityResourceDisplayNameConverter" />
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource Model}}">
        <DockPanel>
            <ListBox ItemsSource="{Binding Path=GetMeSomeManufacturers}" DockPanel.Dock="Top" x:Name="lstResources">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource EntityResourceDisplayNameConverter}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!-- put item details here -->
            <UI:EntityResourceDetails EntityResource="{Binding ElementName=lstResources, Path=SelectedItem}" />
        </DockPanel> 
    </Grid>
</Window>
