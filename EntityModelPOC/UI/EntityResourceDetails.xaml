<UserControl x:Class="EntityModelPOC.UI.EntityResourceDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:UI="clr-namespace:EntityModelPOC.UI"
             xmlns:EntityModel="clr-namespace:EntityModelPOC.Transport.EntityModel" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <UI:EntityResourceDisplayNameConverter x:Key="EntityResourceDisplayNameConverter" />
  </UserControl.Resources>
  <Grid>
      <DockPanel>
          <StackPanel DockPanel.Dock="Left" Width="425">
            <TextBlock Text="{Binding EntityResource.Name}" FontWeight="Bold" FontSize="18" Foreground="Pink" Typography.Capitals="SmallCaps" />
            <TextBlock Text="{Binding EntityResource.Description}" Typography.StylisticSet3="True" />
          </StackPanel>
          <StackPanel>
            <TextBlock Text="Locations" Typography.Capitals="SmallCaps"/>
            <ListBox ItemsSource="{Binding EntityResource.Locations}" Height="75"/>
          </StackPanel>
      </DockPanel>
            
    </Grid>
</UserControl>
