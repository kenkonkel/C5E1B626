<UserControl x:Class="EntityModelPOC.UI.EntityResourceDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:UI="clr-namespace:EntityModelPOC.UI" mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="530">
  <UserControl.Resources>
    <UI:EntityResourceDisplayNameConverter x:Key="EntityResourceDisplayNameConverter" />
  </UserControl.Resources>
  <Grid>
      <DockPanel>
          <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="{Binding EntityResource.Name}" FontWeight="Bold" FontSize="18" Foreground="Pink" Typography.Capitals="SmallCaps" />
            <TextBlock Text="{Binding EntityResource.Description}" Typography.StylisticSet3="True" />
          </StackPanel>
          <TextBlock DockPanel.Dock="Right">
              <Run Text="{Binding EntityResource.Locations.Length}"/>
              <Run Text="Locations" />
          </TextBlock>
      </DockPanel>
            
    </Grid>
</UserControl>
